<!-- Loader -->

<div id="custom-loader">
    <img src="<%= settings.logo.url %>" alt="Logo" id="loader-logo">
    <div id="loader-text"><%= settings.name %></div>
    <div class="loading-circle"></div>
  </div>
  
  <style>

/* Loader container */
#custom-loader {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9); /* Dark translucent background */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 9999; /* Ensure it appears on top */
  color: #fff; /* White text */
}

/* Logo */
#loader-logo {
  width: 60px; /* Adjust size as needed */
  margin-bottom: 10px;
}

/* Text below logo */
#loader-text {
  font-size: 18px;
  margin-bottom: 15px;
  font-family: Arial, sans-serif;
}

/* Spinning circle */
.loading-circle {
  width: 25px;
  height: 25px;
  border: 3px solid rgba(255, 255, 255, 0.3); /* Circle background */
  border-top: 3px solid #fff; /* Active part of the spinner */
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

/* Spin animation */
@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}


  </style>

<script>
    window.addEventListener('load', () => {
      setTimeout(() => {
        const loader = document.getElementById('custom-loader');
        loader.style.opacity = '0'; // Fade-out effect
        setTimeout(() => {
          loader.style.display = 'none'; // Fully remove loader
        }, 500); // Match fade-out duration
      }, 500); // Loader stays for 2 seconds after page load
    });
  </script>
  